import pymongo


ip = '221.228.230.140'

def mongo_getstat(ip):
    return pymongo.MongoClient( ip, 27017).server_info()

    
def main():
    item = mongo_getstat(ip)
    for k,v in item:
        print k + ":" + v

if __name__ == '__main__':
    main()
