import hashlib,os

def getfiles(base):
    #print os.listdir(base)
    #result = []
    for filename in os.listdir(base):
        filepath = os.path.join(base, filename)
        #print filepath
        #st = os.stat(filepath)
        yield filepath
     
def hash1(source):
    for filename in source:
        m = hashlib.md5()
        m.update(source)
        print filename, m.digest(source)
    
       
def main():
    source = getfiles('/home/ymy/python')
    hash1(source)
    
    
    
if __name__ == '__main__':
    main()