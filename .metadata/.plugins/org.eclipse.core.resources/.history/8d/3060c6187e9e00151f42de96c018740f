import pymongo


ip = '221.228.230.140'

def mongo_getstat(ip):
    info =  pymongo.MongoClient( ip, 27017).server_info()
    for k,v in info:
        print k +":" + v

    
def main():
     mongo_getstat(ip)


if __name__ == '__main__':
    main()
