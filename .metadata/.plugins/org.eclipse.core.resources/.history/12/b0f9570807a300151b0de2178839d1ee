def mongo_connection_show(day,id):
        client=pymongo.MongoClient('221.228.228.72',27018)
        db=client.sdb
        conn=db.daily_sum
        #id = long(int(id))
        #print id
        for i in  conn.find({"date":day,'id':id}):
            return i
        
def mysql_show(day,id):
    conn=MySQLdb.connect(host="221.228.228.4",user="ymy",passwd="uqcqa8zd",db="dsp_test")
    cursor = conn.cursor ()
    #打印多少条记录
    count =  cursor.execute("SELECT  sum(executedImpression) FROM `dsp_daily_solution_winnotice` where time >= '%s'  and  solutionid = '%s'  "  % day,id  )
    #print count
    #打印具体内容
    info = cursor.fetchmany(count)
    for i in info:
        mysqlshow =  i[0]
        return  mysqlshow

def main():
    day = datetime.datetime.today().strftime("%Y-%m-%d")
    print day
    sid = get_solutionid(day)
    for id in sid:
        #print id
        mongo_connection_show(day,id)
        mysql_show(day,id)
     

if __name__ == '__main__':
    main()
