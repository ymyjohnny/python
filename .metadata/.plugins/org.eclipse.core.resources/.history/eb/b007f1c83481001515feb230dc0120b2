import os

dirname = '/tmp'

def allfile(dirname):
    filenames = []
    for base,dirs,files in os.walk(dirname):
        for file in files:
            filename = os.path.join(base,file)
            filenames = filename.append()
            #print filenames

#def grep_a(file,str):
    #pass
    
            
allfile(dirname)