import json
import pymongo
import datetime

f = open('config20151124.json', 'r')
config = json.load(f)

#字典添加
config["datetime"] =  datetime.datetime.now().strftime("%Y-%m-%d %H:%M:%S")

print config

def mongo_connection_gdb(ipaddress,port):
        client=pymongo.MongoClient(ipaddress,port)
        db=client.gdb
        conn=db.daily_sum
        return conn

mongo_connection_gdb("221.228.230.172", 27018)
