import pymongo


ip = '221.228.230.140'

def mongo_getstat(ip):
    mongoclient = pymongo.MongoClient( ip, 27018)
    client=pymongo.MongoClient(ip,27018)
    db=client.gdb
    conn=db.daily_sum.find()
    print pymongo.MongoClient( ip, 27017).server_info()

    yield conn
    
def main():
    for row in mongo_getstat(ip):
        print row

if __name__ == '__main__':
    main()
