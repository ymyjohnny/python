def mongo_connection_show(day,id):
        client=pymongo.MongoClient('221.228.228.72',27018)
        db=client.sdb
        conn=db.daily_sum
        #id = long(int(id))
        print id
        for i in  conn.find({"date":day,'id':id}):
             try:
                 print "i"
                 yield i
             except Exception:
                #continue
                print  "not win"
        conn.close()

def mongo_show(row,keys):
    for item in row:
        print item
        if not item:
            print "not win"
        return item[keys]
        
def mysql_price(date1,date,id):
    conn=MySQLdb.connect(host="221.228.228.46",user="root",passwd="uqcqa8zd",db="bidder_report")
    cursor = conn.cursor ()
    #打印多少条记录
    #print date
    #print date1
    pricerow =  cursor.execute(" SELECT sum( pass_price ) FROM  solution_monitors WHERE solutionid = %s  AND  dateline  >= '%s'  and  dateline  <  '%s' "  % (id,date,date1)  )
    #print count
    #打印具体内容
    price = cursor.fetchmany(pricerow)
    for i in price:
        mysqlprice =  i[0]
        print "mysqlprice %s "  % mysqlprice 
        cursor.close ()  
        conn.close ()  
        return  mysqlprice

def main():
    day = datetime.datetime.today().strftime("%Y-%m-%d")
    today = datetime.date.today()
    oneday = datetime.timedelta(days=1)
    date1 = today + oneday
    date = datetime.datetime.now().strftime("%Y-%m-%d ")
    sid = get_solutionid()
    sub = "%s  有出价没赢价" % day
    f = open('mail.txt','a') 
    for id in sid:
        print id
        show = 'show'
        mongorow = mongo_connection_show(day,id)
        print mongorow
        if not mongorow:
            print "no win"
        try:
            print "test1"
            mongoshow = mongo_show(mongorow,show)        
            print "mongoshow:%s" % mongoshow
            mysqlprice  = mysql_price(date1,date,id)
            #print mysqlprice
        except Exception:
            continue
            return id
            #return Exception
        if mysqlprice < 10000:
            continue
        if  not mongoshow  and mysqlprice > 10000 :
            print "id有问题"
            fw = "%s mongoshow:%s price次数:%s  \n" % (id,mongoshow,mysqlprice)
            print id
            f.write(fw)
    f.close()
    f1 = open('mail.txt','r')
    if send_mail(mailto_list,sub,f1.read()):  #邮件主题和邮件内容
         print "done!"
    else:
         print "failed!"
    f1.close()
    os.remove('mail.txt')


if __name__ == '__main__':
    main()
