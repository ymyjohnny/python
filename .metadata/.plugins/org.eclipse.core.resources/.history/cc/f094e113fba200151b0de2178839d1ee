def mysql_value(date):
    conn=MySQLdb.connect(host="221.228.228.4",user="ymy",passwd="uqcqa8zd",db="test")
    cursor = conn.cursor ()
    #打印多少条记录
    count =  cursor.execute("select * from dsp_daily_solution_winnotice where time >= '%s'  "  % date )
    #打印具体内容
    info = cursor.fetchmany(count)
    for i in info:
        mysqlsid =  i[0]
        mysqlwin = i[4]
        yield mysqlsid,mysqlwin
        #yield  i
    cursor.close ()  
    conn.close ()  
